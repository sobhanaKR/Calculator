<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.course.calculator.MainActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true">

            <Button
                android:id="@+id/first_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter  First number"
                android:textColorHint="#ff0000"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@drawable/remove_btn_rectangle"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addition_layout"
            android:layout_marginTop="15dp"
            android:background="?attr/selectableItemBackground">

            <Button
                android:id="@+id/operator_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/blue_border"
                android:textSize="22sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/second_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter  Second number"
                android:textColorHint="#ff0000"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@drawable/remove_btn_rectangle"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addition_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="?attr/selectableItemBackground"
        android:layout_marginRight="7dp">

        <Button
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/remove_btn_border"
            android:onClick="onClick"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textSize="22sp"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subtraction_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/addition_layout"
        android:layout_below="@id/top_layout"
        android:background="?attr/selectableItemBackground"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/sub_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/remove_btn_border"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/multiplication_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addition_layout"
        android:background="?attr/selectableItemBackground"
        android:layout_marginLeft="20dp">

        <Button
            android:id="@+id/multiply_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/remove_btn_border"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/division_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/addition_layout"
        android:layout_below="@id/subtraction_layout"
        android:background="?attr/selectableItemBackground"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/divide_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/remove_btn_border"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_centerInParent="true"
        android:layout_marginRight="7dp"
        android:background="?attr/selectableItemBackground">

        <Button
            android:id="@+id/result_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:background="@drawable/circle_shape"
            android:padding="10dp"
            android:hint="Answer"
            android:inputType="number"
            android:gravity="center"
            android:textColorHint="#ff0000"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/go_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplication_layout"
        android:background="?attr/selectableItemBackground"
        android:layout_marginRight="7dp">

        <Button
            android:id="@+id/go_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GO!"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/blue_border"
            android:textSize="22sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_below="@id/go_layout"/>
    <TextView
        android:id="@+id/new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="80dp"
        android:layout_alignRight="@id/score"
        android:text="Next"
        android:visibility="gone"
        android:textColor="#000000"
        android:layout_below="@id/go_layout"/>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@id/new_game"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:text="Next"
        android:background="@drawable/arrow"
        android:visibility="gone"
        android:textColor="#000000"
        android:layout_below="@id/go_layout"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/congrats"
        android:layout_below="@id/score"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        android:background="@drawable/flower"/>



</RelativeLayout>
